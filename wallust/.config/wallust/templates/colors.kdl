// Template for Zellij
// Place this in ~/.config/wallust/templates/zellij.kdl

themes {
    wallust-theme {
        fg "{{foreground}}"
        bg "{{background}}"
        black "{{color0}}"
        red "{{color1}}"
        green "{{color2}}"
        yellow "{{color3}}"
        blue "{{color4}}"
        magenta "{{color5}}"
        cyan "{{color6}}"
        white "{{color7}}"
        orange "{{color11}}" // Используем яркий желтый/оранжевый
    }
}

